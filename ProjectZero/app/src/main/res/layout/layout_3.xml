<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/black"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="24dp"
            android:id="@+id/one"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_orange_dark"/>

        <EditText
            android:layout_alignLeft="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/in1"
            android:textStyle="italic"
            android:hint="John Doe"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@android:color/holo_orange_dark"
            android:textColor="@android:color/holo_orange_dark"
            android:background="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="24dp"
            android:id="@+id/two"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_orange_dark"/>

        <EditText
            android:layout_alignLeft="@+id/two"
            android:id="@+id/in2"
            android:layout_width="wrap_content"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:hint="111 Street Ave"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@android:color/holo_orange_dark"
            android:textColor="@android:color/holo_orange_dark"
            android:background="@android:color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="24dp"
            android:id="@+id/three"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_orange_dark"/>

        <EditText
            android:layout_alignLeft="@+id/three"
            android:id="@+id/in3"
            android:layout_width="wrap_content"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:hint="(123)456-7890"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@android:color/holo_orange_dark"
            android:textColor="@android:color/holo_orange_dark"
            android:background="@android:color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/black"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Notes"
            android:textSize="24dp"
            android:id="@+id/four"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_orange_dark"/>

        <EditText
            android:layout_alignLeft="@+id/four"
            android:id="@+id/in4"
            android:layout_width="wrap_content"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:hint="N/A"
            android:textSize="24dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@android:color/holo_orange_dark"
            android:textColor="@android:color/holo_orange_dark"
            android:background="@android:color/black"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginTop="60dp"
        android:id="@+id/Submit_Request"
        android:onClick="accessWeb"
        android:text="Submit form"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:background="@android:color/black"
        android:text="will redirect to HomeDepot.com"/>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>

